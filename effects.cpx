interface

void init_effects();

enum enum_soundeffects
{
	SE_bug,
	SE_explosion,
	SE_hit,
	SE_infotron,
	SE_pcb,
	SE_push,
	SE_victory,
	SE_last
};

implementation

uses configuration,audio;

#define NAMEDSFXLOAD(a) sfx_load(datadir+"/sounds/" #a ".ogg",SE_##a);

void init_effects()
{
	NAMEDSFXLOAD(bug)
	NAMEDSFXLOAD(explosion)
	NAMEDSFXLOAD(hit);
	NAMEDSFXLOAD(infotron);
	NAMEDSFXLOAD(pcb);
	NAMEDSFXLOAD(push);
	NAMEDSFXLOAD(victory);
}

